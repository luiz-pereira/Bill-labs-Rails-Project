<!DOCTYPE html>
<html>
  <head>
    <title>BillLabsRailsProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

		<nav class="navbar navbar-light bg-light">
			<a class="navbar-brand" href="#">Administration Area</a>

			<ul class="nav">
				<% if current_user %>
					<li class="nav-item active">
						<h4>Welcome, <%= current_user.name %></h4>
					</li>
					<li class="nav-item active">
						<%= link_to 'Log out', logout_path, class: 'nav-link' %>
					</li>
				<% else %>
					<li class="nav-item">
						<%= link_to 'Sign In', admin_login_path, class: "btn btn-outline-primary my-2 my-sm-0 ml-4"%>
					</li>
				<% end %>
			</ul>
		</nav>
    <%= yield %>
  </body>
</html>
